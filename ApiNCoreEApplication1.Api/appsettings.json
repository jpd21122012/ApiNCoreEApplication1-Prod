{
  "Authentication": {
    "UseIndentityServer4": false, //False = use embeded JWT authentication / True = Use Indentity Server 4 (this server must be running in order to use Apincore service)
    "IndentityServer4IP": "http://localhost:5000" //For test environment"
  },
  "SwaggerSettings": {
    "UIPath": "http://localhost:44342/Assets/",
    "UIStyleSheet": "CustomUI.css"
  },
  "ConnectionStrings": {
    "UseMigrationService": true,
    "UseSeedService": true,
    "UseInMemoryDatabase": false,
    "ApiNCoreEApplication1DB": "Data Source=localhost\\SQLEXPRESS;Initial Catalog=FutFever;Trusted_Connection=True;MultipleActiveResultSets=True;"
  },
  //"Logging": {
  //    "IncludeScopes": false,
  //    "Debug": {
